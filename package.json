{
    "name": "build-sound-server",
    "main": "./index.js",
    "author": "dad",
    "license": "The Unlicense",
    "scripts": {
        "dev": "pm2-dev index.js --watch --ignore node_modules --ignore ./*/**/*.mp3",
        "start": "pm2 start ./prod.pm2.json",
        "deploy": "git pull && npm i && pm2 restart build-sound-server",
        "sendtest": "curl -X POST -H \"Content-Type: application/json\" -d '{\"message\":\"test\"}' http://localhost:9099/"
    },
    "type": "module",
    "dependencies": {
        "dotenv": "^16.4.5",
        "pm2": "^5.3.1",
        "pretty-ms": "^9.0.0",
        "winston": "^3.13.0"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin-js": "^1.7.0",
        "eslint": "^9.1.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-n": "^17.2.1",
        "eslint-plugin-perfectionist": "^2.9.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-simple-import-sort": "^12.0.0",
        "eslint-plugin-unicorn": "^52.0.0",
        "prettier": "^3.2.5"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "eslintConfig": {
        "root": true,
        "plugins": [
            "prettier",
            "@stylistic/js",
            "unicorn",
            "simple-import-sort",
            "perfectionist",
            "n"
        ],
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended",
            "plugin:unicorn/recommended",
            "plugin:perfectionist/recommended-natural",
            "plugin:n/recommended"
        ],
        "env": {
            "es2021": true,
            "node": true,
            "es6": true
        },
        "rules": {
            "no-unused-vars": "warn",
            "no-console": "off"
        }
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "version": "0.0.0",
    "packageManager": "yarn@4.1.1"
}
